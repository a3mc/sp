{
    "$schema": "http://json.schemastore.org/tsconfig",
    "compilerOptions": {
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "strict": true,
        "strictPropertyInitialization": false,
        "incremental": false,
        "lib": [
            "es2020",
            "dom"
        ],
        "module": "commonjs",
        "esModuleInterop": true,
        "moduleResolution": "node",
        "target": "es2020",
        "sourceMap": false,
        "declaration": true,
        "importHelpers": true,
        "outDir": "dist",
        "rootDir": "app/src"
    },
    "include": ["app/src"]
}
